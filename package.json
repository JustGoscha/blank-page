{
  "name": "blank-page",
  "version": "1.0.0",
  "description": "A simple interactive story engine.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0."
  },
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "bundle": "webpack --mode=$NODE_ENV",
    "test": "jest --coverage",
    "upload-codecoverage": "codecov -t $CODECOV_TOKEN"
  },
  "author": "Georg Graf",
  "license": "MIT",
  "dependencies": {
    "awesome-typescript-loader": "^5.2.0",
    "mousetrap": "^1.6.2",
    "sinon": "^1.17.3",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "codecov": "^3.0.4",
    "jest": "^23.5.0",
    "prettier": "1.14.2",
    "ts-jest": "^23.1.3",
    "webpack-cli": "^3.1.0"
  },
  "prettier": {
    "semi": false
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
